{
    "$id": "myschema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Time Series Configuration",
    "type": "object",
    "properties": {
        "unit": {
            "$ref": "./common-types.schema.json#/definitions/unitType"
        },
        "min_periods": {
            "type": "integer",
            "minimum": 1
        },
        "data_frequency": {
            "$ref": "./common-types.schema.json#/definitions/nullableString"
        },
        "sliding_window": {
            "$ref": "./common-types.schema.json#/definitions/slidingWindowType"
        },
        "interpolate_missing": {
            "type": "boolean"
        }
    },
    "required": [
        "unit",
        "min_periods",
        "data_frequency",
        "sliding_window",
        "interpolate_missing"
    ],
    "additionalProperties": false
}